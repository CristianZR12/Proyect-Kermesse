
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="col-xl-5 col-md-10 col-sm-5 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Ingresar Sesión</h3>
        </div>
        <div class="card-body">
            <div class="danger">
                @ViewBag.Error
            </div>
            <form action="@Url.Content("~/Acceso/Login")" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" type="email" name="email" placeholder="Ingrese su Correo Electrónico." />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" type="password" name="pwd" placeholder="Ingrese su Contraseña." />
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary" type="submit">Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>

