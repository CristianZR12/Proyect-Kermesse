@model IEnumerable<Kermesse_Proyect.Models.Opcion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-11 mx-auto">
    <h2>Opciones</h2>

    <p>
        @Html.ActionLink("Nuevo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.opcionDescripcion)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.opcionDescripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idOpcion }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.idOpcion }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idOpcion })
                </td>
            </tr>
        }

    </table>
</div>
